{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh
packages=(
    exa
    gcc
    gcc-c++
    gettext
    git-delta
    gnome-extensions-app
    gnome-tweaks
    google-roboto-fonts
    libgda
    libgda-sqlite
    neovim
    ripgrep
    tmux
    ulauncher
    util-linux-user
    zoxide
    zsh
)

sudo dnf -y install "${packages[@]}" &&
curl -fsSL https://fnm.vercel.app/install | bash &&
curl -sS https://starship.rs/install.sh | sh &&
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh &&
curl -s "https://raw.githubusercontent.com/saint-13/Linux_Dynamic_Wallpapers/main/Interactive_Install.sh" | sudo bash &&
git clone https://github.com/zsh-users/zsh-autosuggestions ~/.zsh/zsh-autosuggestions &&
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm &&
git clone git@github.com:hrqmonteiro/barman.git ~/.local/share/gnome-shell/extensions/barman@hrqmonteiro &&
git clone git@github.com:hrqmonteiro/hideonoverview.git ~/.local/share/gnome-shell/extensions/hideonoverview@hrqmonteiro &&
git clone https://gitlab.com/adeswantaTechs/shell-configurator.git && cd shell-configurator && ./installer.sh --build && ./installer.sh --install USER && cd && rm -rf shell-configurator &&
rm -rf ~/.asdf &&
git clone https://github.com/asdf-vm/asdf.git ~/.asdf --branch v0.11.3 &&
git clone https://github.com/vinceliuice/Colloid-icon-theme ~/Colloid-icon-theme && cd ~/Colloid-icon-theme && ./install.sh && cd && rm -rf Colloid-icon-theme

{{ else -}}
{{ end -}}
